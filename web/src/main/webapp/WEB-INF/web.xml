<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>summer</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>

	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>/WEB-INF/config/log4j2.xml</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:spring/*.spring.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- <filter> <filter-name>sessionvalidatefilter</filter-name> <filter-class>com.realjt.summer.summer.filter.SessionValidateFilter</filter-class> 
		</filter> -->

	<servlet>
		<servlet-name>summerservlet</servlet-name>
		<servlet-class>com.realjt.summer.summer.servlet.SummerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>allusersservlet</servlet-name>
		<servlet-class>com.realjt.summer.summer.servlet.AllUsersServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>deleteuserservlet</servlet-name>
		<servlet-class>com.realjt.summer.summer.servlet.DeleteUserServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>summerservlet</servlet-name>
		<url-pattern>/summerservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>allusersservlet</servlet-name>
		<url-pattern>/allusersservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deleteuserservlet</servlet-name>
		<url-pattern>/deleteuserservlet</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>

</web-app>